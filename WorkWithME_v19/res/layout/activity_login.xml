<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background_pic">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="117dp"
        android:text="Log In"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_userDefault"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/iv_userDefault"
        android:text="Username"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/iv_userDefault"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_action_user" />

    <EditText
        android:id="@+id/ed_username"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_username"
        android:layout_below="@+id/tv_username"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
       
    </EditText>

     <TextView
         android:id="@+id/tv_password"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/ed_username"
         android:layout_toLeftOf="@+id/iv_userDefault"
         android:text="Password"
         android:textColor="#FFFFFF"
         android:textSize="16dp" />

     <EditText
         android:id="@+id/ed_password"
         android:layout_width="270dp"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/ed_username"
         android:layout_below="@+id/tv_password"
         android:layout_marginTop="8dp"
         android:ems="10"
         android:inputType="numberPassword" />

     <Button
         android:id="@+id/btn_confirm"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/tv_password"
         android:layout_below="@+id/ed_password"
         android:layout_marginLeft="27dp"
         android:layout_marginTop="8dp"
         android:text="Confirm"
         android:textColor="#FFFFFF"
         android:textSize="16dp" />

     <Button
         android:id="@+id/btn_cancel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/btn_confirm"
         android:layout_alignBottom="@+id/btn_confirm"
         android:layout_marginLeft="21dp"
         android:layout_toRightOf="@+id/btn_confirm"
         android:text="Cancel"
         android:textColor="#FFFFFF"
         android:textSize="16dp" />

</RelativeLayout>
